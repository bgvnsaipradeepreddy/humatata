<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvEventAdapter"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivcvEventAdapter"
                android:src="@drawable/event"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="busireddy giri venkata nagendra sai pradeep reddy"
                    android:textColor="@android:color/black"
                    android:id="@+id/tvcvEventAdapter"
                    android:layout_alignTop="@+id/bcvEventAdapter"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/bcvEventAdapter" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:text="Details"
                    android:background="@color/colorPrimary"
                    style="?android:attr/buttonStyleSmall"
                    android:id="@+id/bcvEventAdapter"
                    android:layout_marginRight="7dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fabFragmentEvent"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/cvEventAdapter"
        android:layout_alignEnd="@+id/cvEventAdapter" />


</RelativeLayout>