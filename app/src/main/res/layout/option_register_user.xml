<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <include android:id="@+id/tbIncludeUserRegisterOption"
        layout="@layout/toolbar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Places"
        android:id="@+id/bPlacesUserRegisterOption"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Offices"
        android:id="@+id/bOfficesUserRegisterOption"
        android:layout_below="@+id/bPlacesUserRegisterOption"
        android:layout_centerHorizontal="true" />
</RelativeLayout>